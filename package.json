{
  "name": "ai-agentic-framework",
  "version": "1.0.0",
  "description": "AI-powered test automation framework",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "setup": "npm ci && npx playwright install",
    "clean": "rimraf dist coverage allure-results allure-report",
    "build": "tsc -p tsconfig.json --preserveWatchOutput",
    "start": "npm run build && node dist/src/server/server.js",
    "dev": "ts-node-esm src/server/server.ts",
    "ai:orchestrate": "ts-node-esm src/orchestrator/orchestrator.ts",
    "ai:run": "tsx src/orchestrator/orchestrator.ts",
    "ai:run:debug": "cross-env DEBUG=* LOG_LEVEL=debug tsx --inspect src/orchestrator/orchestrator.ts",
    "test": "playwright test",
    "test:generated": "playwright test src/tests/generated --reporter=list,html",
    "test:ui": "playwright test --ui",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "prepare": "husky install"
  },
  "dependencies": {
    "@playwright/test": "^1.47.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "openai": "^4.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/helmet": "^0.0.48",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "allure-playwright": "^2.15.1",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.4.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
